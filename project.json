{
    "webroot": "wwwroot",
    "dependencies": {
        "HomeDepot.Platform.Web": "1.0.2-build017"
    },

    "buildOptions": {
        "emitEntryPoint": true,
        "preserveCompilationContext": true,
        "copyToOutput": [
            "config.json",
            "NLog.config"
        ]
    },

    "frameworks": {
        "net451": {}
    },

    "runtimeOptions": {
        "configProperties": {
            "System.GC.Server": true
        }
    },

    "publishOptions": {
        "include": [
            "wwwroot",
            "config.json",
            "NLog.config"
        ]
    }
}
