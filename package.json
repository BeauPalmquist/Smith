    "redux-thunk": "^2.0"
  },
  "scripts": {
    "test:framework": "mocha ./src/**/*.spec.js --compilers js:babel-core/register --reporter nyan",
    "lint:framework": "eslint ./src/**/*.js --fix",
    "lint:client": "eslint ./app/**/*.js --fix",
    "predownload:forge-scripts": "npm run lint:framework",
    "download:forge-scripts": "node ./forgeDownload.js",
    "prebuild:framework:prod": "npm run download:forge-scripts",
    "build:framework:prod": "webpack --config ./src/webpack.prod.config.js",
    "prebuild:framework:dev": "npm run download:forge-scripts",
    "build:framework:dev": "webpack --config ./src/webpack.dev.config.js",
    "precopy:css:wwwroot": "npm run build:framework:dev",
    "copy:css:wwwroot": "copyfiles -u 1 ./dist/*.css ./dist/*.map ./wwwroot/src/css",
    "prebuild:client": "npm run lint:client && npm run copy:css:wwwroot",
    "build:client": "webpack --config ./app/webpack.config.js"
  }
